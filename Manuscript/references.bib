@Article{betts2015,
  author    = {Betts, Matthew G. and Hadley, Adam S. and Kress, W. John},
  title     = {Pollinator recognition by a keystone tropical plant},
  journal   = {Proceedings of the National Academy of Sciences},
  year      = {2015},
  volume    = {112},

@Article{fahrig2015,
  author    = {Lenore Fahrig and Judith Girard and Dennis Duro and Jon Pasher and Adam Smith and Steve Javorek and Douglas King and Kathryn Freemark Lindsay and Scott Mitchell and Lutz Tischendorf},

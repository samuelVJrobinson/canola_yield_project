@Article{ellis2005,
  author    = {Ellis, Christine M. and Nagpal, Punita and Young, Jeffery C. and Hagen, Gretchen and Guilfoyle, Thomas J. and Reed, Jason W.},
  title     = {{AUXIN RESPONSE FACTOR1} and {AUXIN RESPONSE FACTOR2} regulate senescence and floral organ abscission in \emph{Arabidopsis thaliana}},
  journal   = {Development},

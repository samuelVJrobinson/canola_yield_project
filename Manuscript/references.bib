@Article{eckert1994,
  author    = {Eckert, C. D. and Winston, M. L. and Ydenberg, R. C.},
  journal   = {Oecologia},
  title     = {The relationship between population size, amount of brood, and individual foraging behaviour in the honey bee, \emph{Apis mellifera} {L.}},

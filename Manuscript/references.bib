}

@Article{weekes2005,
  author    = {Weekes, Rebecca and Deppe, Carola and Allnutt, Theo and Boffey, Caroline and Morgan, Derek and Morgan, Sarah and Bilton, Mark and Daniels, Roger and Henry, Christine},
  title     = {Crop-to-crop Gene Flow using Farm Scale Sites of Oilseed Rape (Brassica napus) in the UK},

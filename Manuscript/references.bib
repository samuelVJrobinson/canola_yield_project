@Article{macleod2016,
  author   = {MacLeod, Molly and Genung, Mark A. and Ascher, John S. and Winfree, Rachael},
  title    = {Measuring partner choice in plant-pollinator networks: using null models to separate rewiring and fidelity from chance},
  journal  = {Ecology},

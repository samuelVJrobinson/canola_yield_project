@Article{romero2011,
  author    = {Romero, Gustavo Q. AND Antiqueira, Pablo A. P. AND Koricheva, Julia},
  journal   = {PLoS ONE},
  title     = {A Meta-Analysis of Predation Risk Effects on Pollinator Behaviour},
  year      = {2011},
  number    = {6},
  pages     = {1--9},
  volume    = {6},
  abstract  = {<p>Flower-visiting animals are constantly under predation risk when foraging and hence might be expected to evolve behavioural adaptations to avoid predators. We reviewed the available published and unpublished data to assess the overall effects of predators on pollinator behaviour and to examine sources of variation in these effects. The results of our meta-analysis showed that predation risk significantly decreased flower visitation rates (by 36%) and time spent on flowers (by 51%) by pollinators. The strength of the predator effects depended neither on predator taxa and foraging mode (sit-and-wait or active hunters) nor on pollinator lifestyle (social vs. solitary). However, predator effects differed among pollinator taxa: predator presence reduced flower visitation rates and time spent on flowers by Squamata, Lepidoptera and Hymenoptera, but not by Diptera. Furthermore, larger pollinators showed weaker responses to predation risk, probably because they are more difficult to capture. Presence of live crab spiders on flowers had weaker effects on pollinator behaviour than presence of dead or artificial crab spiders or other objects (e.g. dead bees, spheres), suggesting that predator crypsis may be effective to some extent. These results add to a growing consensus on the importance of considering both predator and pollinator characteristics from a community perspective.</p>},
  doi       = {10.1371/journal.pone.0020689},
  groups    = {Pollinator movement, Movement},
  owner     = {Samuel},
  publisher = {Public Library of Science},
  timestamp = {2016.04.11},
  url       = {http://dx.doi.org/10.1371%2Fjournal.pone.0020689},
}

@Article{ronca2017,
  author    = {Sandra Ronca and Jo\"{e}l Allainguillaume and Caroline S. Ford and John Warren and Mike J. Wilkinson},

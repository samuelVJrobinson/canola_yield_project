@Article{nayak2014,
  author    = {Nayak, Geetha K. and Roberts, Stuart P.M. and Garratt, Michael and Breeze, Thomas D. and Tscheulin, Thomas and Harrison-Cripps, Jenn and Vogiatzakis, Ioannis N. and Stirpe, Maria T. and Potts, Simon G.},
  title     = {Interactive effect of floral abundance and semi-natural habitats on pollinators in field beans (\emph{Vicia faba})},
  journal   = {Agriculture, Ecosystems \& Environment},
  year      = {2014},
  volume    = {199},

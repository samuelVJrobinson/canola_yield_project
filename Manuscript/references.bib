@Article{uyttenbroeck2017,
  author   = {Roel Uyttenbroeck and Julien Piqueray and Séverin Hatt and Grégory Mahy and Arnaud Monty},
  journal  = {Agriculture, Ecosystems \& Environment},
  title    = {Increasing plant functional diversity is not the key for supporting pollinators in wildflower strips},
  year     = {2017},

}

@Article{currie1990,
  author    = {R. W. Currie and S. C. Jay and D. Wright},
  title     = {The Effects of Honeybees (\emph{Apis mellifera} {L}.) and Leafcutter Bees (\emph{Megachile rotundata} {F}.) on Out-Crossing Between Different Cultivars of Beans (\emph{Vicia faba} {L}.) in Caged Plots},

@Article{chifflet2011,
  author    = {Chifflet, Remy and Klein, Etienne K and Lavigne, Claire and Le Feon, Violette and Ricroch, Agnes E and Lecomte, Jane and Vaissiere, Bernard E},
  title     = {Spatial scale of insect-mediated pollen dispersal in oilseed rape in an open agricultural landscape},
  journal   = {Journal of Applied Ecology},

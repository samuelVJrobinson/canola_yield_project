@Article{potts2003b,
  author    = {Simon G. Potts and Betsy Vulliamy and Amots Dafni and Gidi Ne'eman and Chris O'Toole and Stuart Roberts and Pat Willmer},
  title     = {Response of Plant-Pollinator Communities to Fire: Changes in Diversity, Abundance and Floral Reward Structure},

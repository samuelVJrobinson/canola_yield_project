@Article{adler2011,
  author    = {Adler, Peter B. and Seabloom, Eric W. and Borer, Elizabeth T. and Hillebrand, Helmut and Hautier, Yann and Hector, Andy and Harpole, W. Stanley and O'Halloran, Lydia R. and Grace, James B. and Anderson, T. Michael and Bakker, Jonathan D. and Biederman, Lori A. and Brown, Cynthia S. and Buckley, Yvonne M. and others},
  title     = {Productivity is a poor predictor of plant species richness},
  journal   = {Science},

@Article{miller2010,
  author    = {G.H. Miller and J. Brigham-Grette and R.B. Alley and L. Anderson and H.A. Bauch and M.S.V. Douglas and M.E. Edwards and S.A. Elias and B.P. Finney and J.J. Fitzpatrick and S.V. Funder and T.D. Herbert and L.D. Hinzman and D.S. Kaufman and G.M. MacDonald and L. Polyak and A. Robock and M.C. Serreze and J.P. Smol and R. Spielhagen and J.W.C. White and A.P. Wolfe and E.W. Wolff},
  title     = {Temperature and precipitation history of the Arctic},

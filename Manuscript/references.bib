}

@Article{gutierrez2018forest,
  author    = {Guti{\'e}rrez-Chac{\'o}n, Catalina and Dormann, Carsten F and Klein, Alexandra-Maria},
  title     = {Forest-edge associated bees benefit from the proportion of tropical forest regardless of its edge length},
  journal   = {Biological Conservation},

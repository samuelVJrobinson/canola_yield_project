@Article{walker2006,
  author    = {Walker, Marilyn D. and Wahren, C. H. and Hollister, Robert D. and Henry, Greg H. R. and Ahlquist, L.E. and Alatalo, J.M. and Bret-Harte, M.S. and Calef, M.P. and Callaghan, T.V. and Carroll, A.B. and others},

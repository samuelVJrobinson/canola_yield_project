@Article{hoyle2009,
  author    = {Hoyle, Martin and Cresswell, James E.},
  title     = {Maximum feasible distance of windborne cross-pollination in {Brassica napus}: A `mass budget' model},
  journal   = {Ecological Modelling},
  year      = {2009},
  volume    = {220},
  number    = {8},
  pages     = {1090--1097},
  issn      = {0304-3800},

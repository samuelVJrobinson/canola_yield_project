  groups   = {Habitat restoration/prevention},
  keywords = {Functional diversity, Wildflower strips, Plant-pollinator networks, Niche overlap, Agri-environment schemes, Redundancy},
  url      = {http://www.sciencedirect.com/science/article/pii/S016788091730364X},
}


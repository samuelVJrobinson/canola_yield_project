@Article{diekotter2010,
  author    = {Diek\"{o}tter, Tim and Kadoya, Taku and Peter, Franziska and Wolters, Volkmar and Jauker, Frank},
  title     = {Oilseed rape crops distort plant-pollinator interactions},
  journal   = {Journal of Applied Ecology},
  year      = {2010},
  volume    = {47},
  number    = {1},
  pages     = {209--214},

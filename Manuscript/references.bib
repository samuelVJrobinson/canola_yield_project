@Article{callaghan2011,
  author    = {Callaghan, Terry V and Tweedie, Craig E and {\AA}kerman, Jonas and Andrews, Christopher and Bergstedt, Johan and Butler, Malcolm G and Christensen, Torben R and Cooley, Dorothy and Dahlberg, Ulrika and Danby, Ryan K and others},
  title     = {Multi-decadal changes in tundra environments and ecosystems: Synthesis of the International Polar Year-Back to the Future project (IPY-BTF)},

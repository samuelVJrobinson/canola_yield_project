@Article{sandrock2014,
  author    = {Sandrock, Christoph and Tanadini, Lorenzo G. and Pettis, Jeffery S. and Biesmeijer, Jacobus C. and Potts, Simon G. and Neumann, Peter},
  journal   = {Agricultural and Forest Entomology},
  title     = {Sublethal neonicotinoid insecticide exposure reduces solitary bee reproductive success},

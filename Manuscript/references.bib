  file      = {:C\:\\Users\\Samuel\\Documents\\Papers\\joseph et al 2016.pdf:PDF},
  groups    = {Statistics},
  keywords  = {cattle grazing, imperfect detection, indirect effects, latent variable, occupancy model, structural equation model},

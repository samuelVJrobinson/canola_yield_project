@Article{goulson2015,
  author    = {Goulson, Dave and Nicholls, Elizabeth and Bot\'{i}as, Cristina and Rotheray, Ellen L.},
  title     = {Bee declines driven by combined stress from parasites, pesticides, and lack of flowers},

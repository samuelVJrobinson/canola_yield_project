@Article{westphal2009,
  author    = {Westphal, C. and Steffan-Dewenter, I. and Tscharntke, T.},
  title     = {Mass flowering oilseed rape improves early colony growth but not sexual reproduction of bumblebees},
  journal   = {Journal of Applied Ecology},

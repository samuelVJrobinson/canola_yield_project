  timestamp = {2017.06.02},
  url       = {http://www.sciencedirect.com/science/article/pii/S0006320703003707},
}

@Article{carvell2006,
  author    = {Claire Carvell and David B. Roy and Simon M. Smart and Richard F. Pywell and Chris D. Preston and Dave Goulson},

  File                     = {:C\:\\Users\\Samuel\\Documents\\Papers\\petersen et al 2013.pdf:PDF},
  Publisher                = {Public Library of Science},
  Url                      = {http://dx.doi.org/10.1371%2Fjournal.pone.0069819}
}


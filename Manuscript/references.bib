@Article{cardinal2013,
  author    = {Cardinal, Sophie and Danforth, Bryan N.},
  title     = {Bees diversified in the age of eudicots},
  journal   = {Proceedings of the Royal Society of London B: Biological Sciences},
  year      = {2013},
  volume    = {280},

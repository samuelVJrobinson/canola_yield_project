@Article{jauker2012b,
  author    = {Frank Jauker and Franziska Peter and Volkmar Wolters and Tim Diek\"{o}tter},
  title     = {Early reproductive benefits of mass-flowering crops to the solitary bee \emph{Osmia rufa} outbalance post-flowering disadvantages},

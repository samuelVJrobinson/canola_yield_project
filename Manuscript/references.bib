@Article{higginson2015,
  author    = {Higginson, Andrew D. and Houston, Alasdair I.},
  journal   = {Behavioral Ecology and Sociobiology},
  title     = {The influence of the food--predation trade-off on the foraging behaviour of central-place foragers},

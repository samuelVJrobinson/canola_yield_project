@Article{kremen2002,
  author    = {Kremen, Claire and Williams, Neal M. and Thorp, Robbin W.},
  title     = {Crop pollination from native bees at risk from agricultural intensification},
  journal   = {Proceedings of the National Academy of Sciences},

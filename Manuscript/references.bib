@Article{lefeon2013,
  author    = {Le F{\'e}on, Violette and Burel, Fran{\c{c}}oise and Chifflet, R{\'e}my and Henry, Micka{\"e}l and Ricroch, Agn{\`e}s and Vaissi{\`e}re, Bernard E and Baudry, Jacques},

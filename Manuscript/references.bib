@Article{parker1974,
  author    = {G. A. Parker},
  title     = {The reproductive behaviour and the nature of sexual selection in \emph{Scatophaga stercoraria} {L.(Diptera: Scatophagidae)}: IX. Spatial Distribution of Fertilization Rates and Evolution of Male Search Strategy Within the Reproductive Area},
  journal   = {Evolution},

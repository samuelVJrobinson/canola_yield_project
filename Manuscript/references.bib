@Article{dag2000,
  author    = {A. Dag and D. Eisenstein and S. Gazit},
  title     = {Effect of temperature regime on pollen and the effective pollination of ‘Kent’ mango in Israel},
  journal   = {Scientia Horticulturae},
  year      = {2000},

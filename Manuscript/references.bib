}

@Article{morrison2017,
  author    = {Jane Morrison and Jordi Izquierdo and Eva Hern\'{a}ndez Plaza and Jos\'{e} L. Gonz\'{a}lez-And\'{u}jar},
  journal   = {Agriculture, Ecosystems \& Environment},
  title     = {The role of field margins in supporting wild bees in Mediterranean cereal agroecosystems: Which biotic and abiotic factors are important?},

@Article{burkle2009,
  author    = {Burkle, Laura A. and Irwin, Rebecca E.},
  title     = {The effects of nutrient addition on floral characters and pollination in two subalpine plants, \emph{Ipomopsis aggregata} and \emph{Linum lewisii}},
  journal   = {Plant Ecology},
  year      = {2009},
  volume    = {203},
  number    = {1},

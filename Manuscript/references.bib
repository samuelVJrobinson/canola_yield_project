  keywords  = {Acadia National Park, Bayesian analysis, causal analysis, causal diagrams, guidelines, metamodels, statistics, structural equation modeling, structural equation metamodels, wetlands},
  owner     = {Samuel},
  publisher = {Ecological Society of America},
  timestamp = {2017.08.10},
  url       = {http://dx.doi.org/10.1890/ES12-00048.1},
}


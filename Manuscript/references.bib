@Article{stout2002,
  author    = {Jane Stout and Dave Goulson},
  journal   = {Behavioral Ecology and Sociobiology},
  title     = {The influence of nectar secretion rates on the responses of bumblebees (\emph{Bombus} spp.) to previously visited flowers},

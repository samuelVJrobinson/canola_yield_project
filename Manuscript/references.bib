@Article{iler2013,
  author    = {Iler, Amy M and Inouye, David W and H{\o}ye, Toke T and Miller-Rushing, Abraham J and Burkle, Laura A and Johnston, Eleanor B},
  title     = {Maintenance of temporal synchrony between {Syrphid} flies and floral resources despite differential phenological responses to climate},
